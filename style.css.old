body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: rgb(40, 155, 221);

    color: white;
    text-align: center;

    width: 70vw;

    margin: auto;
    margin-left: 10px;
    margin-right: 10px;

    padding: 1rem;

    border-radius: 8px;
    border-bottom: 1px solid #E2E8F0;

    box-shadow: 0 2px 4px rgba(21, 21, 21, 0.1);
}

main {
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
}

h1 {
    color: #f0e9e9;
}

.step {
    background: rgb(22, 140, 218);
    margin: 20px 0;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgba(21, 21, 21, 0.1);
    color: #f0e9e9;

}

.step h2 {
    color: #f5e6e6;
}

